@model IEnumerable<ServicuerosSA.Models.Descarne>

@{
    ViewData["Title"] = "Index";
}

<h2>Descarne</h2>

<p>
    <a asp-action="Create">Ingreso de un nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Pelambres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pelambres.PelambreId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DescarneId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DescarneId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.DescarneId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
