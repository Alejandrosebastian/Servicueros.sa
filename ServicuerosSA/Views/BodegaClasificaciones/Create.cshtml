@model ServicuerosSA.Models.Bodega1

@{
    ViewData["Title"] = "Create";
}

<h2>Nuevo Ingreso a bodega</h2>

<h4>Bodega1</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BodegaId" class="control-label ">Bodega</label>
                <div class="cssToolTip">
                    <select asp-for="BodegaId" class="form-control" onchange="boodegas();"
                            asp-items="ViewBag.BodegaId"></select>
                    <span id="Bodegas" name="Bodegas"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LoteId" class="control-label">Lote</label>
                <div class="cssToolTip">
                    <select asp-for="LoteId" class="form-control" onchange="lote();"
                            asp-items="ViewBag.LoteId"></select>
                    <span id="Lotes" name="Lotes"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ClasificacionId" class="control-label">Clasificación</label>
                <select asp-for="ClasificacionId" class="form-control" asp-items="ViewBag.ClasificacionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Fechaingreso" class="control-label"></label>
                <input asp-for="Fechaingreso" class="form-control" />
                <span asp-validation-for="Fechaingreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroEstanteria" class="control-label"></label>
                <input asp-for="NumeroEstanteria" class="form-control" />
                <span asp-validation-for="NumeroEstanteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPieles" class="control-label"></label>
                
                    <input asp-for="NumeroPieles" class="form-control" onfocusout="numeropileslote();" />
                    <span asp-validation-for="NumeroPieles" class="text-danger"></span>
                    <span id="numpieles" name="numpieles" class="text-danger" style="visibility:hidden">El número de pieles no debe ser mayor a Lote</span>
                    
               
                </div>
                <div class="form-group">
                    <label asp-for="Peso" class="control-label"></label>
                    <input asp-for="Peso" class="form-control" />
                    <span asp-validation-for="Peso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="MedidaId" class="control-label">Medida de Peso</label>
                    <select asp-for="MedidaId" class="form-control" asp-items="ViewBag.MedidaId"></select>
                    <span asp-validation-for="MedidaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Observaciones" class="control-label"></label>
                    <input asp-for="Observaciones" class="form-control" />
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>
                <div class="form-group" style="visibility:hidden">
                    <div class="checkbox">
                        <label>
                            <input asp-for="activo" checked /> @Html.DisplayNameFor(model => model.activo)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input id="graba" name="graba" type="submit" value="Crear" class="btn btn-default" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de clasificaciones</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

