@model IEnumerable<ServicuerosSA.Models.TipoPiel>

@{
    ViewData["Title"] = "Tipos de Pieles";
}

<h2>Tipos de Pieles</h2>

<p>
    <a asp-action="Create">Ingresar nuevo tipo piel</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Detalle)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoPielId" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TipoPielId" class="btn btn-info">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoPielId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
