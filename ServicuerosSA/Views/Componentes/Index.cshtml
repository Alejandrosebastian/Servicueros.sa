@model IEnumerable<ServicuerosSA.Models.Componente>

@{
    ViewData["Title"] = "Index";
}

<h2>Componentes</h2>

<p>
   
    <a class="btn btn-success" asp-action="Create">Insertar un nuevo componente</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Detalle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Porcentaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quimico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tiempo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.formula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porcentaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quimico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tiempo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medida.Abreviatura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.formula.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info"  asp-route-id="@item.ComponenteId">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.ComponenteId">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ComponenteId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
