@model ServicuerosSA.Models.Bodega

@{
    ViewData["Title"] = "Create";
}

<h2>Crear una nueva bodega</h2>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreBodega" class="control-label"></label>
                <input asp-for="NombreBodega" class="form-control" />
                <span asp-validation-for="NombreBodega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadAlmacenamiento" class="control-label"></label>
                <input asp-for="CantidadAlmacenamiento" class="form-control" />
                <span asp-validation-for="CantidadAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroEstantes" class="control-label"></label>
                <input asp-for="NumeroEstantes" class="form-control" />
                <span asp-validation-for="NumeroEstantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TipoBodegaId" class="control-label">Tipo de bodega</label>
                <select asp-for="TipoBodegaId" class ="form-control" asp-items="ViewBag.TipoBodegaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Regresar a lista de bodegas</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
