                        <br />
                        <span id="mensajenu" class="alert alert-danger hidden">Ingrese un número de pieles a Curtir</span>
                    </div>*@



                    <div class="form-group">
                        <label class="control-label">Personal Asignado</label>
                        <select id="personalId" name="personalId" required class="form-control">
                            <option value="0">Seleccione el Personal asignado a esta operación</option>
                        </select>
                        <br />
                        <span id="mensajeper" class="alert alert-danger hidden">Seleccione al personal asignado</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observaciones</label>
                        <input id="Observaciones" name="Observaciones" class="form-control" />
                    </div>

                    <table class="table" id="tablaCurtido">
                        <thead>
                            <tr>
                                <th>
                                    Selección
                                </th>



                                <th>
                                    Codigo Lote
                                </th>
                                <th>
                                    <select id="ClasificaciontripaId" name="ClasificaciontripaId" onchange="llenaTablaCurtidoModal()" class="form-control">
                                        <option value="0">Buscar por Seleccion</option>
                                    </select>

                                </th>

                                <th>
                                    Numero de Pieles
                                </th>
                                <th>
                                    Peso
                                </th>
                                <th>
                                    Medida
                                </th>


                            </tr>
                        </thead>
                        <tbody id="ListaCurtido"></tbody>
                    </table>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarCurtido" name="guardarCurtido" onclick="guardarCurtido()">Guarda</button>
            </div>
        </div>
    </div>
</div>

