@model ServicuerosSA.Models.Pelambre

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Pelambre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label"></label>
                <input asp-for="Observaciones" class="form-control" />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bodega1Id" class="control-label"></label>
                <select asp-for="Bodega1Id" class ="form-control" asp-items="ViewBag.Bodega1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="BomboId" class="control-label"></label>
                <select asp-for="BomboId" class ="form-control" asp-items="ViewBag.BomboId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FormulaId" class="control-label"></label>
                <select asp-for="FormulaId" class ="form-control" asp-items="ViewBag.FormulaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista de pelambre</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
