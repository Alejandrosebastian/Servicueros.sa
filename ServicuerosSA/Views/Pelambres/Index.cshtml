

@{
    ViewData["Title"] = "Proceso en Pelambre";
}

<h2>Proceso en Pelambre</h2>
<p>
    <a href="#" class="btn btn-success" data-toggle="modal" data-target="#IngresoPelambre" onclick="ListaFormulas(); ListaBombos(); ListaPelambre(); listaTipoPiel(); listaClasificaciones(); listaPersonal()">Nuevo Proceso</a>
    <a href="#" class="btn btn-success" data-toggle="modal" data-target="#ImpresionPelambre">Impresion</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo de Lote
            </th>
            <th>
                Tipo de Piel
            </th>
            <th>
                Clasificación
            </th>
            <th>
                Fecha y Hora
            </th>
            <th>
                Bombo
            </th>
            <th>
                Formula
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="pelambre"></tbody>
</table>

<div class="modal fade" id="IngresoPelambre" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Ingreso de Proceso Pelambre
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">Bombo</label>
                        <select id="bomboId" name="bomboId" required class="form-control">
                            <option value="0">Seleccione un Bombo</option>
                        </select>
                        <label id="mensajeb" class="col-md-2 control-label label-danger"></label>

                    </div>
                    <div class="form-group">
                        <label class="control-label">Fórmula</label>
                        <select id="formulaId" name="formulaId" required class="form-control">
                            <option value="0">Seleccione una Formula</option>
                        </select>
                        <label id="mensajef" class="col-md-2 control-label label-danger"></label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Personal Asignado</label>
                        <select id="personalId" name="personalId" required class="form-control">
                            <option value="0">Seleccione el Personal asignado a esta operación</option>
                        </select>
                        <label id="mensajep" class="col-md-2 control-label label-danger"></label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observaciones</label>
                        <textarea id="observacion" name="observacion" class="form-control"></textarea>
                    </div>
                    <table class="table" id="tablaPlambre">
                        <thead>
                            <tr>
                                <th>
                                    Selección
                                </th>
                                <th>
                                    Codigo Lote
                                </th>
                                <th>
                                    <select id="tipoPiel" name="tipoPiel" onchange="tipopiel()" class="form-control">
                                        <option value="0">Buscar por Tipo de Piel</option>
                                    </select>
                                </th>
                                <th>
                                    <select id="clasificaciones" name="clasificaciones" onchange="tipopiel();" class="form-control">
                                        <option value="0"> Buscar por Clasificacion Pelo</option>
                                    </select>
                                </th>
                                <th>
                                    Numero de Pieles
                                </th>
                                <th>
                                    Peso
                                </th>
                            </tr>
                        </thead>
                        <tbody id="LotesLista"></tbody>
                    </table>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardaPelambre()">Guardar</button>
                
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="DetallePelambre" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="EtiquetaModal">
                    Detalle de Proceso Pelambre
                </h4>
            </div>
            <div class="modal-body">
                
                  
                    <div class="form-group">
                       
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Selección
                                </th>
                                <th>
                                    Codigo Lote
                                </th>
                                <th>
                                    <select id="tipoPiel" name="tipoPiel" onchange="tipopiel()" class="form-control">
                                        <option value="0">Buscar por Tipo de Piel</option>
                                    </select>
                                </th>
                                <th>
                                    <select id="clasificaciones" name="clasificaciones" onchange="tipopiel();" class="form-control">
                                        <option value="0"> Buscar por Clasificacion Pelo</option>
                                    </select>
                                </th>
                                <th>
                                    Numero de Pieles
                                </th>
                                <th>
                                    Peso
                                </th>
                            </tr>
                        </thead>
                        <tbody id="LotesLista"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ImpresionPelambre" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="EtiquetaModal">
                    Impresion de Formula Pelambre
                </h4>
            </div>
            <div class="modal-body" id="impresion">
                
                <div class="form-group">
                    <table class="table">
                        <tr>
                            <th>PROCESO DE GESTION DE PRODUCCION</th>
                            <th>
                            <th> <img src="~/images/logo.jpg" />
                            </th>
                        </tr>
                        </table>
                    <table>
                        <tr>
                            <th>CODIGO: <label id="codigo" class="control-label"></label></th>
                            <th>VERSION: <label id="version" class="control-label"></label></th>
                            <th>FECHA DE ACTUALIZACION: <label id="fecha" class="control-label"></label></th>
                        </tr>
                    </table>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    TIPO PIEL: <label id="TipoPiel" class="control-label"> </label>
                                </th>
                             </tr>
                            <tr>
                                <th>
                                    FECHA: <label id="fecha" class="control-label"> </label>
                                </th>

                                <th>
                                    PESO:<label id="parada" class="control-label"></label>
                                </th>
                                <th> AUTORIZADO POR:<label id="bombo" class="control-label"></label> </th>
                            </tr>
                            <tr>
                                <th>PARADA: <label id="peso" class="control-label"></label></th>
                                <th>CANTIDAD:<label id="cantidad" class="control-label"></label></th>
                                <th>PROCESADO POR:<label id="promedio" class="control-label"></label></th>
                            </tr>
                            <tr>
                                <th>BOMBO:<label id="autorizado" class="control-label"></label></th>
                                <th>PROMEDIO:<label id="procesado" class="control-label"></label></th>
                                <th>ENTREGADO POR:<label id="entregado" class="control-label"></label></th>
                            </tr>
                        </thead>
                        <tbody id="LotesLista"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>