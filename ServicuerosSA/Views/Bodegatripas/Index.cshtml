@model IEnumerable<ServicuerosSA.Models.Bodegatripa>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Crear una nueva </a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.activo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ClasificacionTripa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descarnes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClasificacionTripa.ClasificacionTripaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descarnes.Cantidad)
            </td>
            <td>
