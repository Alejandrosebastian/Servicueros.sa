                <a asp-action="Details" asp-route-id="@item.BodegaTripaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.BodegaTripaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
