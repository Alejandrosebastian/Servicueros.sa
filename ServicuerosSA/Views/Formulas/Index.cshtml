@model IEnumerable<ServicuerosSA.Models.Formula>

@{
    ViewData["Title"] = "Index";
}

<h2>Fórmulas</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Crear una nueva fórmula</a>
</p>
<table class="table" >
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Creacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Version)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoProceso)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoPiel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Creacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoPiel.Detalle)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info"  asp-route-id="@item.FormulaId">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.FormulaId">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.FormulaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
